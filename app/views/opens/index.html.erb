<h1 class="block">Listing opens</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @opens.each do |open| %>
      <tr>
        <td><%= open.date.strftime("%A, %B %e") %></td>
        <td><%= link_to 'Edit', edit_open_path(open) %></td>
        <td><%= link_to 'Destroy', open, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Open', new_open_path %>
