<%= form_for @inventory, remote: true, url: {action: "update"}, html: {class: "auto-submit"} do |f| %>
  <% if @inventory.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@inventory.errors.count, "error") %> prohibited this inventory from being saved:</h2>

      <ul>
      <% @inventory.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <hr/>

  <h2>Freezer/Shed</h2>
  <div class="table">
    <div class="row">
      <div class="cell row-header">Ice Cream</div>
      <div class="cell"><%= f.number_field "ice_cream", min: 0, class: "count auto-submit-field" %></div>
    </div>
    <div class="row">
      <div class="cell row-header">Sugar</div>
      <div class="cell"><%= f.number_field "sugar", min: 0, class: "count auto-submit-field" %></div>
    </div>
    <div class="row">
      <div class="cell row-header">Dish Soap</div>
      <div class="cell"><%= f.select :dish_soap, ["Almost gone"], include_blank: true %></div>
    </div>
    <div class="row">
      <div class="cell row-header">Hand Soap</div>
      <div class="cell"><%= f.select "hand_soap", ["Almost gone"], include_blank: true %></div>
    </div>
    <div class="row">
      <div class="cell row-header">Bleach</div>
      <div class="cell"><%= f.select "bleach", ["Almost gone"], include_blank: true %></div>
    </div>
    <div class="row">
      <div class="cell row-header">Pine-Sol</div>
      <div class="cell"><%= f.select "pine_sol", ["Almost gone"], include_blank: true %></div>
    </div>
  </div>

  <br/>
  <hr/>

  <h2>Cups</h2>
  <div class="count-cups table">
    <div class="header row">
      <div class="cell">&nbsp;</div>
      <div class="cell">Shed Sleeves</div>
      <div class="cell">Inside Sleeves</div>
      <div class="cell">Loose Cups</div>
      <div class="cell">Total</div>
    </div>
    <div class="row">
      <div class="cell row-header">Snow Ball</div>
      <div class="cell"><%= f.number_field "snowball_shed", min: 0, class: "count", "data-amount"=>"20" %></div>
      <div class="cell"><%= f.number_field "snowball_sleeves", min: 0, class: "count", "data-amount"=>"20" %></div>
      <div class="cell"><%= f.number_field "snowball_loose", min: 0, class: "count", "data-amount"=>"1" %></div>
      <div class="cell"><%= f.text_field "snowball_total", class: "total", disabled: true %></div>
    </div>
    <div class="row">
      <div class="cell row-header">Mountain</div>
      <div class="cell"><%= f.number_field "mountain_shed", min: 0, class: "count", "data-amount"=>"20" %></div>
      <div class="cell"><%= f.number_field "mountain_sleeves", min: 0, class: "count", "data-amount"=>"20" %></div>
      <div class="cell"><%= f.number_field "mountain_loose", min: 0, class: "count", "data-amount"=>"1" %></div>
      <div class="cell"><%= f.text_field "mountain_total", class: "total", disabled: true %></div>
    </div>
    <div class="row">
      <div class="cell row-header">Glacier</div>
      <div class="cell"><%= f.number_field "glacier_shed", min: 0, class: "count", "data-amount"=>"20" %></div>
      <div class="cell"><%= f.number_field "glacier_sleeves", min: 0, class: "count", "data-amount"=>"20" %></div>
      <div class="cell"><%= f.number_field "glacier_loose", min: 0, class: "count", "data-amount"=>"1" %></div>
      <div class="cell"><%= f.text_field "glacier_total", class: "total", disabled: true %></div>
    </div>
    <div class="row">
      <div class="cell row-header">Avalanche</div>
      <div class="cell"><%= f.number_field "avalanche_shed", min: 0, class: "count", "data-amount"=>"20" %></div>
      <div class="cell"><%= f.number_field "avalanche_sleeves", min: 0, class: "count", "data-amount"=>"20" %></div>
      <div class="cell"><%= f.number_field "avalanche_loose", min: 0, class: "count", "data-amount"=>"1" %></div>
      <div class="cell"><%= f.text_field "avalanche_total", class: "total", disabled: true %></div>
    </div>
  </div>

  <hr/>

  <h2>Flavor Concentrates</h2>

  <%= render partial: "shared/flavors_checklist",
    locals: {f: f, checklist_type: "inventory", section: "reds", title: "Reds"} %>

  <%= render partial: "shared/flavors_checklist",
    locals: {f: f, checklist_type: "inventory", section: "pinks_oranges", title: "Pinks/Oranges"} %>

  <%= render partial: "shared/flavors_checklist",
    locals: {f: f, checklist_type: "inventory", section: "yellows", title: "Yellows"} %>

  <%= render partial: "shared/flavors_checklist",
    locals: {f: f, checklist_type: "inventory", section: "greens_browns", title: "Greens/Browns"} %>

  <%= render partial: "shared/flavors_checklist",
    locals: {f: f, checklist_type: "inventory", section: "blues_purples", title: "Blues/Purples"} %>

  <%= render partial: "shared/flavors_checklist",
    locals: {f: f, checklist_type: "inventory", section: "whites", title: "Whites"} %>

  <%= render partial: "shared/flavors_checklist",
    locals: {f: f, checklist_type: "inventory", section: "other", title: "Other"} %>

  <br/>
  <hr/>

  <div class="table">
    <div class="header row">
      <div class="cell row-header">&nbsp;</div>
      <div class="cell">Unopened</div>
      <div class="cell">Opened</div>
    </div>
    <div class="row">
      <div class="cell row-header">Spoons</div>
      <div class="cell"><%= f.number_field "spoons_full", min: 0, class: "count auto-submit-field" %></div>
      <div class="cell"><%= f.select "spoons_partial", ["Full", "3/4", "1/2", "1/4", "Empty"], include_blank: true %></div>
    </div>
    <div class="row">
      <div class="cell row-header">Straws</div>
      <div class="cell"><%= f.number_field "straws", min: 0, class: "count auto-submit-field" %></div>
    </div>
    <div class="row">
      <div class="cell row-header">Napkins</div>
      <div class="cell"><%= f.number_field "napkins", min: 0, class: "count auto-submit-field" %></div>
    </div>
    <div class="row">
      <div class="cell row-header">Paper Towells</div>
      <div class="cell"><%= f.number_field "paper_towells", min: 0, class: "count auto-submit-field" %></div>
    </div>
    <div class="row">
      <div class="cell row-header">Gloves</div>
      <div class="cell"><%= f.number_field "gloves", min: 0, class: "count auto-submit-field" %></div>
    </div>
    <div class="row">
      <div class="cell row-header">Large garbage bags</div>
      <div class="cell"><%= f.select "large_garbage_bags", ["Almost gone"], include_blank: true %></div>
    </div>
    <div class="row">
      <div class="cell row-header">Small garbage bags</div>
      <div class="cell"><%= f.select "small_garbage_bags", ["Almost gone"], include_blank: true %></div>
    </div>
    <div class="row">
      <div class="cell row-header">Order pads</div>
      <div class="cell"><%= f.select "order_pads", ["Almost gone"], include_blank: true %></div>
    </div>
    <div class="row">
      <div class="cell row-header">Heavy Cream</div>
      <div class="cell"><%= f.number_field "hc", min: 0, class: "count auto-submit-field" %></div>
    </div>
    <div class="row">
      <div class="cell row-header">SCM</div>
      <div class="cell"><%= f.number_field "scm", min: 0, class: "count auto-submit-field" %></div>
    </div>
    <div class="row">
      <div class="cell row-header">Evaporated Milk</div>
      <div class="cell"><%= f.number_field "em", min: 0, class: "count auto-submit-field" %></div>
    </div>
    <div class="row">
      <div class="cell row-header">Chocolate Syrup</div>
      <div class="cell"><%= f.select "chocolate", ["Almost gone"], include_blank: true %></div>
    </div>
    <div class="row">
      <div class="cell row-header">Pop Rocks</div>
      <div class="cell"><%= f.select "pop_rocks", ["Almost gone"], include_blank: true %></div>
    </div>
  </div>
<% end %>
